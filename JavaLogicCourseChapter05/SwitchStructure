package LogicCourseChapter05;

import java.util.Scanner;

public class SwitchStructure {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Type the month that you want travel: ");
		Integer month = scanner.nextInt();
		
		Integer discount = 0;
		
		switch (month) {
		case 1: discount = 0;
			break;
		case 2: discount = 0;
			break;
		case 3: discount = 10;
		case 4: discount = 10;
			break;
		case 5: discount = 15;
			break;
		case 6: discount = 15;
			break;
		case 7: discount = 30;
			break;
		case 8: discount = 20;
			break;
		case 9: discount = 15;
			break;
		case 10: discount = 10;
			break;
		case 11: discount = 10;
			break;
		case 12: discount = 0;
			break;
		default:
			System.err.println("ERRO - Type a valid month");
			System.exit(1);
			
	}
		System.out.println("You discount is: " + discount);
		scanner.close();
}
}