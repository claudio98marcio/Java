package Exercice02;

import java.util.Scanner;

public class RestockingCheck {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Product product = new Product();
		
		product.name = "Pencil";
		
		spaceLine();
		
		printSameLine("Please inform a real quantity of a " + product.name + ": ");
		product.stockQuantity = scanner.nextInt();
		
		spaceLine();
		
		System.out.println("Is necessary restock a " + product.name + "? " + product.isNecessaryReplaceAProduct());
		
		spaceLine();
		
		product.necessityOfReplacement();
		
		scanner.close();
	}
	
	static void printSameLine(String text) {
		System.out.print(text);
	}
	
	static void spaceLine() {
		System.out.println("");
	}
}
