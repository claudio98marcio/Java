package LogicCourseChapter04;

import java.util.Scanner;

public class Exercice02 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Type the value of costumer product: ");
		Double productValue = scanner.nextDouble();
		
		Boolean shippingDiscount = productValue >= 100;
		
		if (shippingDiscount) {
			System.out.println("The costumer must pay: " + productValue);
		} else {
			Double finalValue = productValue + 15;
			System.out.println("The costumer must pay: " + finalValue);
		}
		
		scanner.close();
	}
}
